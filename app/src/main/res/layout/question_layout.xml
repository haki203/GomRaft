<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Question" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rất tệ" />
        <RadioButton
            android:id="@+id/ratte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tệ" />
        <RadioButton
            android:id="@+id/bth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bình thường" />
        <RadioButton
            android:id="@+id/tot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tốt" />
        <RadioButton
            android:id="@+id/rattot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rất tốt" />
        <RadioButton
            android:id="@+id/quadinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quá đỉnh rồi" />
        <!-- Add other radio buttons here -->

    </RadioGroup>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next" />

</LinearLayout>
